<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:padding="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_cart_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_cart_itemName"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintWidth_percent="0.37"
        app:layout_constraintHeight_percent="0.5"
        android:text="Apple"
        android:textSize="@dimen/txt_size_25sp"
        android:gravity="bottom"
        android:textStyle="bold"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@id/img_cart_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_cart_itemPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/text_cart_itemWeight"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:text="1 Kg"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textSize="@dimen/txt_size_23sp"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.37"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toEndOf="@id/img_cart_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_cart_itemPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"/>

    <TextView
        android:id="@+id/text_cart_itemPrice"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:text="100"
        android:textStyle="bold"
        android:textSize="@dimen/txt_size_25sp"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.27"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>